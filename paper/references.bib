	journal = {The Astrophysical Journal Letters},
	author = {Soummer, Rémi and Pueyo, Laurent and Larkin, James},
	month = aug,
	year = {2012},
	keywords = {methods: data analysis, techniques: image processing},
	pages = {L28},
	file = {Soummer et al_2012_Detection and Characterization of Exoplanets and Disks Using Projections on.pdf:/Users/miles/Zotero/storage/X39TATPZ/Soummer et al_2012_Detection and Characterization of Exoplanets and Disks Using Projections on.pdf:application/pdf},
