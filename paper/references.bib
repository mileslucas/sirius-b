	urldate = {2021-10-14},
	journal = {Astronomy and Astrophysics},
	author = {Huby, E. and Bottom, M. and Femenia, B. and Ngo, H. and Mawet, D. and Serabyn, E. and Absil, O.},
	month = apr,
	year = {2017},
	pages = {A46},
	file = {Full Text PDF:/Users/miles/Zotero/storage/MDSRX636/Huby et al. - 2017 - On-sky performance of the QACITS pointing control .pdf:application/pdf;Snapshot:/Users/miles/Zotero/storage/SWA42ADE/abstract.html:text/html},
