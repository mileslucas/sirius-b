	author = {Pairet, Benoît and Cantalloube, Faustine and Jacques, Laurent},
	month = aug,
	year = {2020},
	note = {arXiv: 2008.05170},
	keywords = {Astrophysics - Instrumentation and Methods for Astrophysics},
	file = {arXiv.org Snapshot:/Users/miles/Zotero/storage/7ZB8F8ND/2008.html:text/html;Pairet et al_2020_MAYONNAISE_annotated.pdf:/Users/miles/Zotero/storage/YDFCTCEK/Pairet et al_2020_MAYONNAISE_annotated.pdf:application/pdf;Pairet et al_2020_MAYONNAISE.pdf:/Users/miles/Zotero/storage/W2FFGR6E/Pairet et al_2020_MAYONNAISE.pdf:application/pdf},
