	month = may,
	year = {2020},
	pages = {A38},
	file = {Full Text PDF:/Users/miles/Zotero/storage/IJQQKC5L/Phillips et al. - 2020 - A new set of atmosphere and evolution models for c.pdf:application/pdf;Snapshot:/Users/miles/Zotero/storage/4QUXDRW8/abstract.html:text/html},
}

